    <script>
        const brilliantBlues = {
            dark: '#004E89',
            bright: '#0074D9',
            light: '#7FDBFF',
            background: '#F0F8FF',
            text: '#111111'
        };

        function wrapLabels(label, maxLength) {
            if (typeof label !== 'string' || label.length <= maxLength) {
                return label;
            }
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        }

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            } else {
                return label;
            }
        };

        const chartOptionsBase = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        color: brilliantBlues.text,
                        font: {
                            size: 14
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback,
                        label: function(context) {
                            const dataIndex = context.dataIndex;
                            const total = labelsAndPrices[dataIndex].total;
                            const monthly = labelsAndPrices[dataIndex].monthly;
                            const monthlyCash = labelsAndPrices[dataIndex].monthlyCash;
                            return [
                                `Total: ${total}‚Ç¨`,
                                `Promedio Mensual: ${monthly}‚Ç¨`,
                                `Promedio Mensual (en efectivo): ${monthlyCash}‚Ç¨`
                            ];
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { color: brilliantBlues.text },
                    grid: { color: '#e0e0e0' }
                },
                x: {
                    ticks: { color: brilliantBlues.text },
                    grid: { display: false }
                }
            }
        };
        
        // Discount Chart (Bar Chart) - Updated for Antiguos Alumnos with monthly average
        const discountCtx = document.getElementById('discountChart').getContext('2d');
        const labelsAndPrices = [
            { label: 'Preparaci√≥n Completa', total: 1800, monthly: 180, monthlyCash: 170 }, 
            { label: 'Sin Correcci√≥n de Temario', total: 1440, monthly: 144, monthlyCash: 134 }, 
            { label: 'Sin Correcci√≥n de Casos', total: 1440, monthly: 144, monthlyCash: 134 }, 
            { label: 'Sin Correcci√≥n de Temas ni Casos', total: 1080, monthly: 108, monthlyCash: 98 }
        ];

        const discountLabels = labelsAndPrices.map(item => 
            wrapLabels(`${item.label}\n(${item.monthly}‚Ç¨/mes)`, 16)
        );
        const discountData = labelsAndPrices.map(item => item.total);

        new Chart(discountCtx, {
            type: 'bar',
            data: {
                labels: discountLabels,
                datasets: [{
                    label: 'Coste Total (‚Ç¨)',
                    data: discountData, 
                    backgroundColor: [brilliantBlues.dark, brilliantBlues.bright, brilliantBlues.bright, brilliantBlues.light],
                    borderColor: brilliantBlues.dark,
                    borderWidth: 1
                }]
            },
            options: chartOptionsBase
        });

        // Composition Chart (Donut)
        const compositionCtx = document.getElementById('compositionChart').getContext('2d');
        new Chart(compositionCtx, {
            type: 'doughnut',
            data: {
                labels: ['Plazo 1 (Reserva)', 'Plazo 2', 'Plazo 3', 'Plazo 4', 'Plazo 5'],
                datasets: [{
                    label: 'Composici√≥n de Plazos',
                    data: [20, 20, 20, 20, 20],
                    backgroundColor: [
                        brilliantBlues.dark,
                        '#296ba9',
                        brilliantBlues.bright,
                        '#539ee3',
                        brilliantBlues.light
                    ],
                    hoverOffset: 4
                }]
            },
            options: {
                 responsive: true,
                 maintainAspectRatio: false,
                 plugins: {
                     legend: {
                         position: 'bottom',
                         labels: {
                             color: brilliantBlues.text,
                             font: {
                                 size: 12
                             }
                         }
                     },
                     tooltip: {
                         callbacks: {
                             title: tooltipTitleCallback
                         }
                     }
                 }
            }
        });
    </script>
